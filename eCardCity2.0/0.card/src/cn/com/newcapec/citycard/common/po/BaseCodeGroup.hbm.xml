<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="cn.com.newcapec.citycard.common.po">
	<class
		name="BaseCodeGroup"
		table="BASE_CODE_GROUP"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="id"
			type="string"
			column="ID"
		>
			<generator class="uuid.hex"/>
		</id>

		<property
			name="typename"
			column="TYPENAME"
			type="string"
			not-null="false"
			length="30"
		/>
		<property
			name="describe"
			column="DESCRIBE"
			type="string"
			not-null="false"
			length="200"
		/>
		<property
			name="ifcard"
			column="IFCARD"
			type="integer"
			not-null="false"
			length="1"
		/>
		<property
			name="opoddfare"
			column="OPODDFARE"
			type="integer"
			not-null="false"
			length="1"
		/>
		<property
			name="opoddfareacc"
			column="OPODDFAREACC"
			type="integer"
			not-null="false"
			length="1"
		/>
		<property
			name="opsumaddfare"
			column="OPSUMADDFARE"
			type="integer"
			not-null="false"
			length="1"
		/>
		<property
			name="opsumconsume"
			column="OPSUMCONSUME"
			type="integer"
			not-null="false"
			length="1"
		/>
		<property
			name="opsumbank"
			column="OPSUMBANK"
			type="integer"
			not-null="false"
			length="1"
		/>
		<property
			name="opsumload"
			column="OPSUMLOAD"
			type="integer"
			not-null="false"
			length="1"
		/>
		<property
			name="opsumsave"
			column="OPSUMSAVE"
			type="integer"
			not-null="false"
			length="1"
		/>
		<property
			name="opsumcharge"
			column="OPSUMCHARGE"
			type="integer"
			not-null="false"
			length="1"
		/>
		<property
			name="dir"
			column="DIR"
			type="integer"
			not-null="false"
			length="1"
		/>
		<property
			name="sortNum"
			column="SORT_NUM"
			type="integer"
			not-null="false"
			length="6"
		/>
		<property
			name="location"
			column="LOCATION"
			type="integer"
			not-null="false"
			length="1"
		/>
		<property
			name="opsubload"
			column="OPSUBLOAD"
			type="integer"
			not-null="false"
			length="1"
		/>


	</class>	
</hibernate-mapping>