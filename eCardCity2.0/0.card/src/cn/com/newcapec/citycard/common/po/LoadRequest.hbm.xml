<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="cn.com.newcapec.citycard.common.po">
	<class
		name="LoadRequest"
		table="LOAD_REQUEST"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="id"
			type="string"
			column="ID"
		>
			<generator class="uuid.hex"/>
		</id>

		<property
			name="bankrecno"
			column="BANKRECNO"
			type="integer"
			not-null="true"
			length="17"
		/>
		<property
			name="customerid"
			column="CUSTOMERID"
			type="string"
			not-null="true"
			length="32"
		/>
		<property
			name="asn"
			column="ASN"
			type="integer"
			not-null="true"
			length="20"
		/>
		<property
			name="fundsWay"
			column="FUNDS_WAY"
			type="string"
			not-null="true"
			length="30"
		/>
		<property
			name="bankcardno"
			column="BANKCARDNO"
			type="string"
			not-null="true"
			length="20"
		/>
		<property
			name="opfare"
			column="OPFARE"
			type="big_decimal"
			not-null="true"
			length="10"
		/>
		<property
			name="acccode"
			column="ACCCODE"
			type="string"
			not-null="true"
			length="10"
		/>
		<property
			name="signType"
			column="SIGN_TYPE"
			type="string"
			not-null="true"
			length="1"
		/>
		<property
			name="status"
			column="STATUS"
			type="string"
			not-null="false"
			length="1"
		/>
		<property
			name="editDate"
			column="EDIT_DATE"
			type="date"
			not-null="true"
			length="7"
		/>


	</class>	
</hibernate-mapping>