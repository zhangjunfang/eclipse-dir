<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="cn.com.newcapec.citycard.common.po">
	<class
		name="Customer"
		table="CUSTOMER"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="id"
			type="string"
			column="ID"
		>
			<generator class="uuid.hex"/>
		</id>

		<property
			name="status"
			column="STATUS"
			type="string"
			not-null="true"
			length="32"
		/>
		<property
			name="sex"
			column="SEX"
			type="string"
			not-null="true"
			length="32"
		/>
		<property
			name="name"
			column="NAME"
			type="string"
			not-null="true"
			length="50"
		/>
		<property
			name="nation"
			column="NATION"
			type="string"
			not-null="true"
			length="32"
		/>
		<property
			name="certificateid"
			column="CERTIFICATEID"
			type="string"
			not-null="true"
			length="32"
		/>
		<property
			name="idcardno"
			column="IDCARDNO"
			type="string"
			not-null="false"
			length="18"
		/>
		<property
			name="country"
			column="COUNTRY"
			type="string"
			not-null="false"
			length="32"
		/>
		<property
			name="jpdm"
			column="JPDM"
			type="string"
			not-null="false"
			length="20"
		/>
		<property
			name="ver"
			column="VER"
			type="integer"
			not-null="false"
			length="5"
		/>
		<property
			name="address"
			column="ADDRESS"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="email"
			column="EMAIL"
			type="string"
			not-null="false"
			length="50"
		/>
		<property
			name="telephone"
			column="TELEPHONE"
			type="string"
			not-null="false"
			length="13"
		/>
		<property
			name="postcode"
			column="POSTCODE"
			type="string"
			not-null="false"
			length="6"
		/>
		<property
			name="birthday"
			column="BIRTHDAY"
			type="date"
			not-null="false"
			length="7"
		/>
		<property
			name="rremark"
			column="RREMARK"
			type="string"
			not-null="false"
			length="200"
		/>
		<property
			name="editPerson"
			column="EDIT_PERSON"
			type="string"
			not-null="true"
			length="32"
		/>
		<property
			name="editDate"
			column="EDIT_DATE"
			type="date"
			not-null="true"
			length="7"
		/>


	</class>	
</hibernate-mapping>