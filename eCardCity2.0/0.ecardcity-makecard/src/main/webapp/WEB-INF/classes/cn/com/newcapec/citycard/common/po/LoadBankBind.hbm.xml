<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="cn.com.newcapec.citycard.common.po">
	<class
		name="LoadBankBind"
		table="LOAD_BANK_BIND"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="id"
			type="string"
			column="ID"
		>
			<generator class="uuid.hex"/>
		</id>

		<property
			name="acccode"
			column="ACCCODE"
			type="string"
			not-null="true"
			length="10"
		/>
		<property
			name="customerid"
			column="CUSTOMERID"
			type="string"
			not-null="true"
			length="32"
		/>
		<property
			name="asn"
			column="ASN"
			type="integer"
			not-null="true"
			length="20"
		/>
		<property
			name="signType"
			column="SIGN_TYPE"
			type="string"
			not-null="true"
			length="1"
		/>
		<property
			name="fundsWay"
			column="FUNDS_WAY"
			type="string"
			not-null="true"
			length="30"
		/>
		<property
			name="bankCardNumber"
			column="BANK_CARD_NUMBER"
			type="string"
			not-null="true"
			length="30"
		/>
		<property
			name="tradeMoney"
			column="TRADE_MONEY"
			type="big_decimal"
			not-null="true"
			length="10"
		/>
		<property
			name="minMoneyLoad"
			column="MIN_MONEY_LOAD"
			type="big_decimal"
			not-null="true"
			length="10"
		/>
		<property
			name="beginDate"
			column="BEGIN_DATE"
			type="date"
			not-null="false"
			length="7"
		/>
		<property
			name="endDate"
			column="END_DATE"
			type="date"
			not-null="false"
			length="7"
		/>
		<property
			name="identificationType"
			column="IDENTIFICATION_TYPE"
			type="string"
			not-null="true"
			length="32"
		/>
		<property
			name="identificationNumber"
			column="IDENTIFICATION_NUMBER"
			type="string"
			not-null="true"
			length="30"
		/>
		<property
			name="signWay"
			column="SIGN_WAY"
			type="string"
			not-null="true"
			length="1"
		/>
		<property
			name="notes"
			column="NOTES"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="editPerson"
			column="EDIT_PERSON"
			type="string"
			not-null="true"
			length="32"
		/>
		<property
			name="editDate"
			column="EDIT_DATE"
			type="date"
			not-null="true"
			length="7"
		/>


	</class>	
</hibernate-mapping>